#!/bin/sh

case "$1" in 
    start)
        echo 'Loading LDD'
        /usr/bin/module_load faulty
        /usr/bin/scull_load
        modprobe hello
        aesdchar_load
        ;;
    stop)
        echo 'Unloading LDD'
        /usr/bin/module_unload faulty
        /usr/bin/scull_unload
        rmmod hello
        aesdchar_unload
        ;;
    *)
        echo "Usage: $0 {start|stop}"
        exit 1
esac
